---
import { Image } from 'astro:assets';
import Lugia from '@/assets/images/lugia.gif';
---

<html lang='en'>
	<head>
		<meta charset='utf-8' />
		<link rel='icon' type='image/svg+xml' href='/favicon.png' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<title>Pok√©mon Battle Forge</title>
	</head>
	<body
		class='w-screen h-[110vh] lg:h-screen px-[6.25vw] pt-[6.25vw] pb-[10vh] lg:p-[3.125vw_6.25vw] relative bg-background lg:overflow-hidden'
	>
		<header class='h-fit m-[6.25vw] lg:m-[3.125vw_6.25vw] absolute inset-0'>
			<Image
				src={Lugia}
				alt=''
				loading='eager'
				class='w-auto h-[10.05vw] lg:h-[3.35vw] relative float-right z-[100]'
			/>
		</header>
		<slot />
	</body>
	<style is:global>
		:root {
			--background: #000000;
			--foreground: #ffffff;
			--accent: #ff4040;
			--secondary-accent: #00c2ff;
		}

		::-webkit-scrollbar {
			width: 0;
		}

		input::-webkit-outer-spin-button,
		input::-webkit-inner-spin-button {
			-webkit-appearance: none;
			margin: 0;
		}

		input[type='number'] {
			-moz-appearance: textfield;
		}

		input[type='range'] {
			accent-color: var(--accent);
		}

		@font-face {
			font-family: 'Bebas Neue';
			src: url('/fonts/BebasNeue.ttf') format('truetype');
		}
	</style>
</html>
